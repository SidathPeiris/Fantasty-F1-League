<!-- Dashboard Page -->
<div class="min-h-screen bg-gradient-to-br from-gray-900 via-red-900 to-black">
  <!-- CSRF Token for JavaScript functions -->
  <meta name="csrf-token" content="<%= form_authenticity_token %>">

  <!-- Navigation Header -->
  <%= render 'shared/navigation' %>

  <!-- Page Title -->
  <div class="bg-gradient-to-br from-gray-900 to-gray-800 py-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h1 class="text-4xl font-bold text-white text-center mb-2">Dashboard</h1>
      <p class="text-xl text-gray-300 text-center mb-4">Your Fantasy F1 League command center</p>
      <p class="text-lg text-gray-400 text-center">Manage your fantasy team, track races, and dominate the leaderboard!</p>
    </div>
  </div>

  <!-- Main Content -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Welcome Message with Admin Button -->
    <div class="text-center mb-8">
      <h2 class="text-2xl font-bold text-white mb-2">Welcome back, <%= current_user.username %>!</h2>
    </div>

    <!-- Season Reset Message -->
    <% if current_user && SeasonResetService.should_show_season_reset_message?(current_user) %>
      <div id="season-reset-dialog" class="max-w-4xl mx-auto mb-8 transition-all duration-1000 ease-in-out opacity-100">
        <div class="bg-gradient-to-br from-blue-800 to-blue-900 p-8 rounded-2xl border border-blue-600 shadow-2xl">
          <div class="text-center">
            <h2 class="text-2xl font-bold text-white mb-4">üîÑ New Season, New Team!</h2>
            <p class="text-xl text-gray-300 mb-6">Welcome to the <%= Date.current.year %> F1 season! Your previous season team has been reset and it's time to create a new one for the upcoming season.</p>
            <div class="bg-blue-600 text-white p-4 rounded-lg mb-4">
              <p class="text-lg font-semibold">Ready to build your championship-winning team?</p>
            </div>
            <div class="flex justify-center space-x-4">
              <button onclick="dismissSeasonResetMessage()" class="bg-gray-600 text-white px-6 py-2 rounded-lg hover:bg-gray-700 transition-all duration-300">
                Got it!
              </button>
              <a href="/create-team" class="bg-gradient-to-r from-blue-600 to-blue-700 text-white px-6 py-2 rounded-lg hover:from-blue-700 hover:to-blue-800 transform hover:scale-105 transition-all duration-300">
                Create New Team
              </a>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Dashboard Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-7xl mx-auto">
      
      <!-- My Team -->
      <div class="bg-gradient-to-br from-gray-800 to-gray-900 p-8 rounded-2xl border border-gray-700 hover:border-red-500 transition-all duration-300 hover:transform hover:scale-105 shadow-2xl">
        <div class="text-center mb-6">
          <div class="w-16 h-16 bg-gradient-to-r from-red-600 to-red-700 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 20 20">
              <path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3z"/>
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-white mb-2">My Team</h3>
          <% if @has_team %>
            <p class="text-green-400 font-semibold">‚úì Team Active</p>
            <p class="text-gray-400 text-sm">Manage your fantasy drivers and constructors</p>
          <% else %>
            <p class="text-blue-400 font-semibold">No Team Yet</p>
            <p class="text-gray-400 text-sm">Create your first fantasy team</p>
          <% end %>
        </div>
        <div class="space-y-3">
          <a href="/my-team" class="block w-full py-3 bg-gradient-to-r from-red-600 to-red-700 text-white font-semibold rounded-lg hover:from-red-700 hover:to-red-800 transform hover:scale-105 transition-all duration-300 shadow-lg hover:shadow-xl text-center">
            View Team
          </a>
          <% if @has_team %>
            <!-- User already has a team - show edit button or locked status -->
            <% if can_edit_team? %>
              <!-- Team can be edited -->
              <a href="/edit-team" class="block w-full py-3 bg-gradient-to-r from-blue-600 to-blue-700 text-white font-medium rounded-lg hover:from-blue-700 hover:to-blue-800 transform hover:scale-105 transition-all duration-300 shadow-lg hover:shadow-xl text-center">
                ‚úèÔ∏è Edit Team
              </a>
              <div class="text-center">
                <p class="text-green-400 text-sm font-semibold">
                  <%= team_edit_status[:message] %>
                </p>
                <% if team_edit_status[:next_lock] %>
                  <p class="text-gray-400 text-xs mt-1">
                    Next lock: <%= team_edit_status[:next_lock].strftime("%B %d, %Y") %>
                  </p>
                <% end %>
              </div>
            <% else %>
              <!-- Team is locked -->
              <div class="block w-full py-3 bg-gray-500 text-gray-300 font-medium rounded-lg cursor-not-allowed text-center opacity-50">
                üîí Team Locked
              </div>
              <div class="text-center">
                <p class="text-gray-400 text-sm">
                  <%= team_edit_status[:message] %>
                </p>
                <% if team_edit_status[:next_unlock] == "mid_season_break" %>
                  <p class="text-blue-400 text-xs mt-1">
                    Unlocks during mid-season break
                  </p>
                <% end %>
              </div>
            <% end %>
          <% else %>
            <!-- User doesn't have a team - can always create team -->
            <a href="/create-team" class="block w-full py-3 bg-gradient-to-r from-blue-600 to-blue-700 text-white font-medium rounded-lg hover:from-blue-700 hover:to-blue-800 transform hover:scale-105 transition-all duration-300 shadow-lg hover:shadow-xl text-center">
              Create Team
            </a>
            <div class="text-center">
              <p class="text-green-400 text-sm font-semibold">
                ‚úÖ You can create your team at any time
              </p>
              <p class="text-gray-400 text-xs mt-1">
                New users and users without teams can always create teams
              </p>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Live Races -->
      <div class="bg-gradient-to-br from-gray-800 to-gray-900 p-8 rounded-2xl border border-gray-700 hover:border-red-500 transition-all duration-300 hover:transform hover:scale-105 shadow-2xl">
        <div class="text-center mb-6">
          <div class="w-16 h-16 bg-gradient-to-r from-green-600 to-green-700 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 20 20">
