<!-- Dashboard Page -->
<div class="min-h-screen bg-gradient-to-br from-gray-900 via-red-900 to-black">
  <%= render 'shared/header' %>

  <!-- Main Content -->
  <div class="container mx-auto px-4 py-8">
    <!-- Welcome Message -->
    <% if current_user && notice %>
      <div id="welcome-dialog" class="max-w-4xl mx-auto mb-8 transition-all duration-1000 ease-in-out opacity-100">
        <div class="bg-gradient-to-br from-red-800 to-red-900 p-8 rounded-2xl border border-red-600 shadow-2xl">
          <div class="text-center">
            <p class="text-xl text-gray-300 mb-6">Ready to dominate the Fantasy F1 League? Let's get started!</p>
            <div class="bg-green-600 text-white p-4 rounded-lg mb-4">
              <p class="text-lg font-semibold"><%= notice %></p>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Welcome Section -->
    <div id="main-content" class="text-center mb-12 transition-all duration-1000 ease-in-out">
      <%= render 'shared/page_header', title: '🏎️ Your F1 Command Center', subtitle: 'Manage your fantasy team, track races, and dominate the leaderboard!' %>
    </div>

    <!-- Dashboard Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-7xl mx-auto">
      
      <!-- My Team -->
      <div class="bg-gradient-to-br from-gray-800 to-gray-900 p-8 rounded-2xl border border-gray-700 hover:border-red-500 transition-all duration-300 hover:transform hover:scale-105 shadow-2xl">
        <div class="text-center mb-6">
          <div class="w-16 h-16 bg-gradient-to-r from-red-600 to-red-700 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 20 20">
              <path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3z"/>
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-white mb-2">My Team</h3>
          <% if @has_team %>
            <p class="text-green-400 font-semibold">✓ Team Active</p>
            <p class="text-gray-400 text-sm">Manage your fantasy drivers and constructors</p>
          <% else %>
            <p class="text-blue-400 font-semibold">No Team Yet</p>
            <p class="text-gray-400 text-sm">Create your first fantasy team</p>
          <% end %>
        </div>
        <div class="space-y-3">
          <a href="/my-team" class="block w-full py-3 bg-gradient-to-r from-red-600 to-red-700 text-white font-semibold rounded-lg hover:from-red-700 hover:to-red-800 transform hover:scale-105 transition-all duration-300 shadow-lg hover:shadow-xl text-center">
            View Team
          </a>
          <% if @has_team %>
            <!-- User already has a team - show disabled button -->
            <div class="block w-full py-3 bg-gray-500 text-gray-300 font-medium rounded-lg cursor-not-allowed text-center opacity-50">
              ✓ Team Created
            </div>
          <% else %>
            <!-- User doesn't have a team - show active button -->
            <a href="/create-team" class="block w-full py-3 bg-gradient-to-r from-blue-600 to-blue-700 text-white font-medium rounded-lg hover:from-blue-700 hover:to-blue-800 transform hover:scale-105 transition-all duration-300 shadow-lg hover:shadow-xl text-center">
              Create Team
            </a>
          <% end %>
        </div>
      </div>

      <!-- Live Races -->
      <div class="bg-gradient-to-br from-gray-800 to-gray-900 p-8 rounded-2xl border border-gray-700 hover:border-red-500 transition-all duration-300 hover:transform hover:scale-105 shadow-2xl">
        <div class="text-center mb-6">
          <div class="w-16 h-16 bg-gradient-to-r from-green-600 to-green-700 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-white mb-2">Live Races</h3>
          <p class="text-gray-400">Watch real-time race updates and scoring</p>
        </div>
        <div class="space-y-3">
          <a href="#" class="block w-full py-3 bg-gradient-to-r from-green-600 to-green-700 text-white font-semibold rounded-lg hover:from-green-700 hover:to-green-800 transform hover:scale-105 transition-all duration-300 shadow-lg hover:shadow-xl text-center">
            Watch Live
          </a>
          <a href="#" class="block w-full py-3 bg-gray-700 text-white font-medium rounded-lg hover:bg-gray-600 transition-all duration-300 text-center">
            Race Schedule
          </a>
        </div>
      </div>

      <!-- Leaderboard -->
      <div class="bg-gradient-to-br from-gray-800 to-gray-900 p-8 rounded-2xl border border-gray-700 hover:border-red-500 transition-all duration-300 hover:transform hover:scale-105 shadow-2xl">
        <div class="text-center mb-6">
          <div class="w-16 h-16 bg-gradient-to-r from-yellow-600 to-yellow-700 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-white mb-2">Leaderboard</h3>
          <p class="text-gray-400">See how you rank against other players</p>
        </div>
        <div class="space-y-3">
          <a href="#" class="block w-full py-3 bg-gradient-to-r from-yellow-600 to-yellow-700 text-white font-semibold rounded-lg hover:from-yellow-700 hover:to-yellow-800 transform hover:scale-105 transition-all duration-300 shadow-lg hover:shadow-xl text-center">
            View Rankings
          </a>
          <a href="#" class="block w-full py-3 bg-gray-700 text-white font-medium rounded-lg hover:bg-gray-600 transition-all duration-300 text-center">
            My Stats
          </a>
        </div>
      </div>

      <!-- Driver Database -->
      <div class="bg-gradient-to-br from-gray-800 to-gray-900 p-8 rounded-2xl border border-gray-700 hover:border-red-500 transition-all duration-300 hover:transform hover:scale-105 shadow-2xl">
        <div class="text-center mb-6">
          <div class="w-16 h-16 bg-gradient-to-r from-blue-600 to-blue-700 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9 6a3 3 0 11-6 0 3 3 0 016 0zM17 6a3 3 0 11-6 0 3 3 0 016 0zM12.93 17c.046-.327.07-.66.07-1a6.97 6.97 0 00-1.5-4.33A5 5 0 0119 16v1h-6.07zM6 11a5 5 0 015 5v1H1v-1a5 5 0 015-5z"/>
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-white mb-2">Driver Database</h3>
          <p class="text-gray-400">Browse all F1 drivers and their stats</p>
        </div>
        <div class="space-y-3">
          <a href="#" class="block w-full py-3 bg-gradient-to-r from-blue-600 to-blue-700 text-white font-semibold rounded-lg hover:from-blue-700 hover:to-blue-800 transform hover:scale-105 transition-all duration-300 shadow-lg hover:shadow-xl text-center">
            Browse Drivers
          </a>
          <a href="#" class="block w-full py-3 bg-gray-700 text-white font-medium rounded-lg hover:bg-gray-600 transition-all duration-300 text-center">
            Driver Stats
          </a>
        </div>
      </div>

      <!-- Constructor Database -->
      <div class="bg-gradient-to-br from-gray-800 to-gray-900 p-8 rounded-2xl border border-gray-700 hover:border-red-500 transition-all duration-300 hover:transform hover:scale-105 shadow-2xl">
        <div class="text-center mb-6">
          <div class="w-16 h-16 bg-gradient-to-r from-purple-600 to-purple-700 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M4 4a2 2 0 00-2 2v4a2 2 0 002 2V6h10a2 2 0 00-2-2H4zm2 6a2 2 0 012-2h8a2 2 0 012 2v4a2 2 0 01-2 2H8a2 2 0 01-2-2v-4zm6 4a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"/>
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-white mb-2">Constructor Database</h3>
          <p class="text-gray-400">Explore F1 teams and their performance</p>
        </div>
        <div class="space-y-3">
          <a href="#" class="block w-full py-3 bg-gradient-to-r from-purple-600 to-purple-700 text-white font-semibold rounded-lg hover:from-purple-700 hover:to-purple-800 transform hover:scale-105 transition-all duration-300 shadow-lg hover:shadow-xl text-center">
            Browse Teams
          </a>
          <a href="#" class="block w-full py-3 bg-gray-700 text-white font-medium rounded-lg hover:bg-gray-600 transition-all duration-300 text-center">
            Team Stats
          </a>
        </div>
      </div>

      <!-- Settings -->
      <div class="bg-gradient-to-br from-gray-800 to-gray-900 p-8 rounded-2xl border border-gray-700 hover:border-red-500 transition-all duration-300 hover:transform hover:scale-105 shadow-2xl">
        <div class="text-center mb-6">
          <div class="w-16 h-16 bg-gradient-to-r from-gray-600 to-gray-700 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M11.49 3.17c-.38-1.56-2.6-1.56-2.98 0a1.532 1.532 0 01-2.286.948c-1.372-.836-2.942.734-2.106 2.106.54.886.061 2.042-.947 2.287-1.561.379-1.561 2.6 0 2.978a1.532 1.532 0 01.947 2.287c-.836 1.372.734 2.942 2.106 2.106a1.532 1.532 0 012.287.947c.379 1.561 2.6 1.561 2.978 0a1.533 1.533 0 012.287-.947c1.372.836 2.942-.734 2.106-2.106a1.533 1.533 0 01.947-2.287c1.561-.379 1.561-2.6 0-2.978a1.532 1.532 0 01-.947-2.287c.836-1.372-.734-2.942-2.106-2.106a1.532 1.532 0 01-2.287-.947zM10 13a3 3 0 100-6 3 3 0 000 6z" clip-rule="evenodd"/>
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-white mb-2">Settings</h3>
          <p class="text-gray-400">Manage your account and preferences</p>
        </div>
        <div class="space-y-3">
          <a href="#" class="block w-full py-3 bg-gradient-to-r from-gray-600 to-gray-700 text-white font-semibold rounded-lg hover:from-gray-700 hover:to-gray-800 transform hover:scale-105 transition-all duration-300 shadow-lg hover:shadow-xl text-center">
            Account Settings
          </a>
          <a href="#" class="block w-full py-3 bg-gray-700 text-white font-medium rounded-lg hover:bg-gray-600 transition-all duration-300 text-center">
            Notifications
          </a>
        </div>
      </div>



    </div>

    <!-- Quick Stats Section -->
    <div class="mt-16 max-w-4xl mx-auto">
      <h2 class="text-3xl font-bold text-white text-center mb-8">Your Quick Stats</h2>
      <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
        <div class="bg-gradient-to-br from-red-800 to-red-900 p-6 rounded-xl text-center">
          <div class="text-3xl font-bold text-white mb-2">#42</div>
          <div class="text-gray-300">Current Rank</div>
        </div>
        <div class="bg-gradient-to-br from-green-800 to-green-900 p-6 rounded-xl text-center">
          <div class="text-3xl font-bold text-white mb-2">1,247</div>
          <div class="text-gray-300">Total Points</div>
        </div>
        <div class="bg-gradient-to-br from-blue-800 to-blue-900 p-6 rounded-xl text-center">
          <div class="text-3xl font-bold text-white mb-2">8</div>
          <div class="text-gray-300">Races Completed</div>
        </div>
        <div class="bg-gradient-to-br from-yellow-800 to-yellow-900 p-6 rounded-xl text-center">
          <div class="text-3xl font-bold text-white mb-2">3</div>
          <div class="text-gray-300">Podium Finishes</div>
        </div>
      </div>
    </div>

    <!-- Recent Activity -->
    <div class="mt-16 max-w-4xl mx-auto">
      <h2 class="text-3xl font-bold text-white text-center mb-8">Recent Activity</h2>
      <div class="bg-gradient-to-br from-gray-800 to-gray-900 p-8 rounded-2xl border border-gray-700">
        <div class="space-y-4">
          <div class="flex items-center space-x-4 p-4 bg-gray-700 rounded-lg">
            <div class="w-3 h-3 bg-green-500 rounded-full"></div>
            <div class="flex-1">
              <div class="text-white font-medium">Points earned from Monaco GP</div>
              <div class="text-gray-400 text-sm">+156 points • 2 hours ago</div>
            </div>
          </div>
          <div class="flex items-center space-x-4 p-4 bg-gray-700 rounded-lg">
            <div class="w-3 h-3 bg-blue-500 rounded-full"></div>
            <div class="flex-1">
              <div class="text-white font-medium">Driver transfer completed</div>
              <div class="text-gray-400 text-sm">Added Max Verstappen • 1 day ago</div>
            </div>
          </div>
          <div class="flex items-center space-x-4 p-4 bg-gray-700 rounded-lg">
            <div class="w-3 h-3 bg-yellow-500 rounded-full"></div>
            <div class="flex-1">
              <div class="text-white font-medium">Moved up in rankings</div>
              <div class="text-gray-400 text-sm">Climbed 3 positions • 2 days ago</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const welcomeDialog = document.getElementById('welcome-dialog');
  const mainContent = document.getElementById('main-content');
  
  if (welcomeDialog) {
    console.log('Welcome dialog found, starting fade timer...');
    
    // After 3 seconds, fade out the welcome dialog
    setTimeout(function() {
      console.log('Starting fade animation...');
      welcomeDialog.style.opacity = '0';
      welcomeDialog.style.transform = 'translateY(-20px)';
      
      // After fade animation completes, remove the dialog and move content up
      setTimeout(function() {
        console.log('Removing welcome dialog...');
        welcomeDialog.style.display = 'none';
        mainContent.style.marginTop = '0';
      }, 1000);
    }, 3000);
  } else {
    console.log('No welcome dialog found');
  }
});
</script> 