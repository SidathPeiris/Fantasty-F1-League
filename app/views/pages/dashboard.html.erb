<script>
document.addEventListener('DOMContentLoaded', function() {
  const welcomeDialog = document.getElementById('welcome-dialog');
  const seasonResetDialog = document.getElementById('season-reset-dialog');
  const mainContent = document.getElementById('main-content');
  
  if (welcomeDialog) {
    console.log('Welcome dialog found, starting fade timer...');
    
    // After 3 seconds, fade out the welcome dialog
    setTimeout(function() {
      console.log('Starting fade animation...');
      welcomeDialog.style.opacity = '0';
      welcomeDialog.style.transform = 'translateY(-20px)';
      
      // After fade animation completes, remove the dialog and move content up
      setTimeout(function() {
        console.log('Removing welcome dialog...');
        welcomeDialog.style.display = 'none';
        mainContent.style.marginTop = '0';
      }, 1000);
    }, 3000);
  } else {
    console.log('No welcome dialog found');
  }

  if (seasonResetDialog) {
    console.log('Season reset dialog found, starting fade timer...');
    
    // After 3 seconds, fade out the season reset dialog
    setTimeout(function() {
      console.log('Starting fade animation...');
      seasonResetDialog.style.opacity = '0';
      seasonResetDialog.style.transform = 'translateY(-20px)';
      
      // After fade animation completes, remove the dialog and move content up
      setTimeout(function() {
        console.log('Removing season reset dialog...');
        seasonResetDialog.style.display = 'none';
        mainContent.style.marginTop = '0';
      }, 1000);
    }, 3000);
  } else {
    console.log('No season reset dialog found');
  }
});

function dismissSeasonResetMessage() {
  const seasonResetDialog = document.getElementById('season-reset-dialog');
  if (seasonResetDialog) {
    // Mark the message as shown via AJAX
    fetch('/dismiss-season-reset-message', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
        'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]')?.getAttribute('content')
      }
    })
    .then(response => response.json())
    .then(data => {
      if (data.success) {
        console.log('Season reset message marked as shown');
      }
    })
    .catch(error => {
      console.error('Error dismissing season reset message:', error);
    });
    
    // Hide the dialog
    seasonResetDialog.style.display = 'none';
    seasonResetDialog.style.opacity = '0';
    seasonResetDialog.style.transform = 'translateY(-20px)';
    const mainContent = document.getElementById('main-content');
    if (mainContent) {
      mainContent.style.marginTop = '0';
    }
  }
}
</script> 