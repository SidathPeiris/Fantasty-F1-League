<!-- Driver Calculations Page -->
<div class="min-h-screen bg-gradient-to-br from-gray-900 via-red-900 to-black">
  <!-- Navigation Header -->
  <%= render 'shared/navigation' %>

  <!-- Page Title -->
  <div class="bg-gradient-to-br from-gray-900 to-gray-800 py-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h1 class="text-4xl font-bold text-white text-center mb-2">Driver Calculations</h1>
      <p class="text-xl text-gray-300 text-center">Detailed breakdown of driver rating and price calculations</p>
    </div>
  </div>

  <!-- Main Content -->
  <div class="container mx-auto px-4 py-12">
    <!-- Header Section -->
    <div class="text-center mb-12">
      <div class="flex items-center justify-between max-w-7xl mx-auto mb-4">
        <a href="/dashboard" class="text-2xl font-bold text-white bg-gradient-to-r from-red-600 to-red-700 px-6 py-3 rounded-lg hover:from-red-700 hover:to-red-800 transform hover:scale-105 transition-all duration-300 shadow-lg hover:shadow-xl">
          Fantasy F1 League
        </a>
        <h1 class="text-5xl font-bold text-white flex-1 text-center">ðŸ§® Driver Calculations</h1>
        <div class="w-64"></div>
      </div>
      <p class="text-xl text-gray-300">Detailed breakdown of driver ratings and costs</p>
      <p class="text-sm text-gray-400 mt-2">Last updated: <%= Time.current.in_time_zone('Australia/Sydney').strftime("%B %d, %Y at %I:%M %p AEST") %></p>
    </div>

    <!-- Driver Calculations -->
    <div class="max-w-7xl mx-auto">
      <% @driver_calculations.each_with_index do |driver, index| %>
        <div class="bg-gradient-to-br from-gray-800 to-gray-900 p-6 rounded-2xl border border-gray-700 mb-6">
          <!-- Driver Header -->
          <div class="flex items-center justify-between mb-6">
            <div class="flex items-center space-x-4">
              <span class="text-3xl font-bold text-amber-400">#<%= index + 1 %></span>
              <div>
                <h2 class="text-2xl font-bold text-white"><%= driver[:name] %></h2>
                <p class="text-gray-400"><%= driver[:team] %></p>
              </div>
            </div>
            <div class="text-right">
              <div class="text-3xl font-bold text-amber-400">â˜… <%= driver[:final_rating] %></div>
              <div class="text-2xl font-bold text-green-400">$<%= driver[:final_price] %>M</div>
            </div>
          </div>

          <!-- Championship Info -->
          <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
            <div class="bg-gray-700 p-4 rounded-lg text-center">
              <div class="text-lg font-bold text-blue-400"><%= driver[:championships_won] %></div>
              <div class="text-gray-400 text-sm">Championships Won</div>
            </div>
            <div class="bg-gray-700 p-4 rounded-lg text-center">
              <div class="text-lg font-bold text-blue-400">#<%= driver[:championship_position] || 'N/A' %></div>
              <div class="text-gray-400 text-sm">Current Position</div>
            </div>
            <div class="bg-gray-700 p-4 rounded-lg text-center">
              <div class="text-lg font-bold text-blue-400"><%= driver[:recent_performance_score] %></div>
              <div class="text-gray-400 text-sm">Recent Performance (5 races)</div>
            </div>
          </div>

          <!-- Rating Breakdown -->
          <div class="mb-6">
            <h3 class="text-xl font-bold text-white mb-4">Rating Calculation (10% History + 50% Position + 30% Recent + 10% Season)</h3>
            <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
              <div class="bg-gradient-to-br from-purple-800 to-purple-900 p-4 rounded-lg">
                <div class="text-center">
                  <div class="text-2xl font-bold text-purple-400"><%= driver[:championship_history_rating] %></div>
                  <div class="text-gray-300 text-sm">History</div>
                  <div class="text-gray-400 text-xs">(10% weight)</div>
                </div>
              </div>
              <div class="bg-gradient-to-br from-blue-800 to-blue-900 p-4 rounded-lg">
                <div class="text-center">
                  <div class="text-2xl font-bold text-blue-400"><%= driver[:championship_position_rating] %></div>
                  <div class="text-gray-300 text-sm">Position</div>
                  <div class="text-gray-400 text-xs">(50% weight)</div>
                </div>
              </div>
              <div class="bg-gradient-to-br from-green-800 to-green-900 p-4 rounded-lg">
                <div class="text-center">
                  <div class="text-2xl font-bold text-green-400"><%= driver[:recent_performance_rating] %></div>
                  <div class="text-gray-300 text-sm">Recent (5 races)</div>
                  <div class="text-gray-400 text-xs">(30% weight)</div>
                </div>
              </div>
              <div class="bg-gradient-to-br from-amber-800 to-amber-900 p-4 rounded-lg">
                <div class="text-center">
                  <div class="text-2xl font-bold text-amber-400"><%= driver[:season_performance_rating] %></div>
                  <div class="text-gray-300 text-sm">Season</div>
                  <div class="text-gray-400 text-xs">(10% weight)</div>
                </div>
              </div>
            </div>
            
            <!-- Final Rating Display -->
            <div class="text-center mt-4 mb-6">
              <div class="bg-gradient-to-br from-red-800 to-red-900 p-4 rounded-lg inline-block">
                <div class="text-3xl font-bold text-red-400">â˜… <%= driver[:final_rating] %></div>
                <div class="text-gray-300 text-sm">Final Combined Rating</div>
              </div>
            </div>
          </div>

          <!-- Price Breakdown -->
          <div>
            <h3 class="text-xl font-bold text-white mb-4">Price Calculation (Base Price + Rating Multiplier)</h3>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
              <div class="bg-gray-700 p-3 rounded-lg text-center">
                <div class="text-lg font-bold text-white">$<%= driver[:base_price] %>M</div>
                <div class="text-gray-400 text-xs">Base Price (Position)</div>
              </div>
              <div class="bg-gray-700 p-3 rounded-lg text-center">
                <div class="text-lg font-bold text-blue-400">Ã—<%= driver[:rating_multiplier] %></div>
                <div class="text-gray-400 text-xs">Rating Multiplier</div>
              </div>
              <div class="bg-gradient-to-br from-green-800 to-green-900 p-3 rounded-lg text-center">
                <div class="text-lg font-bold text-green-400">$<%= driver[:final_price] %>M</div>
                <div class="text-gray-400 text-xs">Final Price</div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Quick Actions -->
    <div class="max-w-4xl mx-auto mt-12">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <a href="/admin" class="bg-gradient-to-br from-gray-800 to-gray-900 p-6 rounded-2xl border border-gray-700 hover:border-red-500 transition-all duration-300 hover:transform hover:scale-105 text-center">
          <div class="w-16 h-16 bg-gradient-to-r from-blue-600 to-blue-700 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-white mb-2">Back to Admin</h3>
          <p class="text-gray-400">Return to admin panel</p>
        </a>
        
        <a href="/rating-summary" class="bg-gradient-to-br from-gray-800 to-gray-900 p-6 rounded-2xl border border-gray-700 hover:border-red-500 transition-all duration-300 hover:transform hover:scale-105 text-center">
          <div class="w-16 h-16 bg-gradient-to-r from-green-600 to-green-700 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-white mb-2">Rating Summary</h3>
          <p class="text-gray-400">View simplified ratings</p>
        </a>
      </div>
    </div>
  </div>
</div> 